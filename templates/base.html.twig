<!DOCTYPE html>
<html lang="sk">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Monter!{% endblock %}</title>

        <!-- Google tag (gtag.js) -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=UA-1448359-10"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());

            gtag('config', 'UA-1448359-10');
        </script>

        <link rel="icon" type="image/x-icon" href="{{ asset('build/images/favicon.ico') }}">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <div class="container">
                <div class="header">
                    {% block pageHeader %}
                    {% endblock pageHeader %}
                </div>
                <div class="page-content">
                    {% block content %}

                    {% endblock content %}
                </div>
                {% block backButton %}
                {% endblock backButton %}
            </div>
        {% endblock body %}
    </body>
</html>
