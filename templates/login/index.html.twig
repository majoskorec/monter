{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="col-8 mx-auto card mt-2">
        <div class="card-header">
            Login
        </div>

        <div class="card-body">

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path('login') }}" method="post" role="form" class="">
                <div class="row mb-2">
                    <div class="col-2">
                        <label
                            for="username"
                            class="form-label"
                        >
                            Username
                        </label>
                    </div>
                    <div class="col">
                        <input
                            type="text"
                            id="username"
                            name="_username"
                            value="{{ last_username }}"
                            class="form-control"
                        />
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-2">
                        <label
                            for="password"
                            class="form-label"
                        >
                            Password
                        </label>
                    </div>
                    <div class="col">
                        <input
                            type="password"
                            id="password"
                            name="_password"
                            class="form-control"
                        />
                    </div>
                </div>


                <input
                    type="hidden"
                    name="_target_path"
                    value="{{ path('admin_page_index') }}"
                />

                <input
                    type="hidden"
                    name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                />

                <div class="row">
                    <div class="col text-center">
                        <button type="submit" class="btn btn-primary">
                            Login
                        </button>
                    </div>
                </div>

            </form>
        </div>
    </div>
{% endblock %}
