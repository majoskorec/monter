{% extends "MonterArtBundle:Default:layout.html.twig" %}

{% block body %}
<div class="main-container">

    <div class="well well-lg col-sm-offset-4 col-sm-4" style="margin-top: 50px;">

        <h1 class="col-sm-offset-3">Login</h1>

        {% if error %}
            <div class="error">{{ error.message|trans({},'messages') }}</div>
        {% endif %}

        <form action="{{ path("login_check") }}" method="post" id="login" role="form" class="form-horizontal text-center">
            <div class="form-group">
                <label for="username" class="control-label col-sm-3 ">Username</label>
                <div class="col-sm-9">
                    <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label for="password" class="control-label col-sm-3 ">Password</label>
                <div class="col-sm-9">
                    <input type="password" id="password" name="_password"  class="form-control" />
                </div>
            </div>

            <input type="hidden" name="_target_path" value="/admin/page" />

            <button type="submit" class="btn btn-primary">
                Login
            </button>
        </form>

    </div>

</div>
{% endblock body %}