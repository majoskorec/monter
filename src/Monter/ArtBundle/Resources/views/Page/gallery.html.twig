{% extends "MonterArtBundle:Default:layout.html.twig" %}

{% block title %}{{ gallery.page.title }} - {{ gallery.title }}{% endblock title %}

{# ---- header -------------------------------------------------------------- #}
{% block pageHeader %}

    <div class="folder"></div>
    <div class="title">
    {% if gallery.page.titleImg is not empty %}
        <img src="data:image/png;base64, {{ gallery.page.titleImg.image }}" alt="{{ gallery.page.titleImg.title }}" />
    {% else %}
        {{ gallery.page.title }}
    {% endif %}
    </div>

{% endblock pageHeader %}
{# ---- end header ---------------------------------------------------------- #}

{# ---- content ------------------------------------------------------------- #}
{% block content %}

    <div style="margin: 80px 40px 0 20px; text-align: center; height: 500px; border: 4px solid white; position: relative;">
        <img src="data:image/png;base64, {{ gallery.image.image }}" alt="{{ gallery.title }}" class="" />
        <a href="{{ path('page', { 'page' : gallery.page.urlKey } ) }}" class="gallery-back"></a>
    </div>

    {% if nextGallery is not empty %}
    <a href="{{ path('gallery', { 'page' : gallery.page.urlKey, 'gallery' : nextGallery }) }}" class="navigation next"></a>
    {% endif %}

    {% if prevGallery is not empty %}
    <a href="{{ path('gallery', { 'page' : gallery.page.urlKey, 'gallery' : prevGallery }) }}" class="navigation prev"></a>
    {% endif %}
{# ---- end content --------------------------------------------------------- #}

{% endblock content %}
{# ---- end content --------------------------------------------------------- #}
